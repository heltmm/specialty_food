<h1 class="white">New Product</h1>
<div class="card">
  <div class="card-body">


    <%= form_for [@product] do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %><br>
      <%= f.label :cost %><br>
      <%= f.number_field :cost %><br>
      <%= f.label :img %>
      <%= f.text_field :img %><br>
      <%= f.label :country_of_origin %>
      <%= f.text_field :country_of_origin %><br>

      <%= f.submit %>
    <% end %>
  </div>
</div>
